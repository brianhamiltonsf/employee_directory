<%= render 'shared/errors', error: @department %>
<%= form_for @department, html: { class: 'form-horizontal' } do |f| %>
  <%= field_set_tag(@department.new_record? ? 'New Department' : "#{@department.name}") do %>
    <div class='col-md-6'>
      <div class='form-group'>
        <%= f.label :name, 'Name', class: 'col-md-4 control-label' %>
        <%= f.text_field :name, placeholder: 'department name...', class: 'form-control', autofocus: true %>
      </div>
      <div class='submit'>
        <%= f.submit 'Save', class: 'button' %>
        <%= link_to 'Cancel', departments_path %>
      </div>
    </div>
  <% end %>
<% end %>
