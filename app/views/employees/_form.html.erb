<%= form_for @employee do |f| %>
  <%= f.label :firstname, 'First Name' %>
  <%= f.text_field :firstname %>
  <%= f.label :lastname, 'Last Name' %>
  <%= f.text_field :lastname %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :address1, "Address" %>
  <%= f.text_field :address1 %>
  <%= f.text_field :address2 %>
  <%= f.label :office_number %>
  <%= f.text_field :office_number %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :zip %>
  <%= f.text_field :zip %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <%= f.label :email, 'Email Address' %>
  <%= f.text_field :email %>
  <%= f.label :manager, "Manager?" %>
  <%= f.text_field :manager %>
  <%= f.label :manager_id, "Manager" %>
  <%= f.text_field :manager %>
  <%= f.label :department_id, 'Department' %>
  <%= f.text_field :department_id %>
  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', employees_path %>
<% end %>
