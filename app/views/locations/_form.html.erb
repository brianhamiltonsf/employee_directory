<div class="content">
  <%= form_for @location, html: { class: 'form-horizontal' } do |f| %>
    <div class='form-group'>
      <%= f.label :name, class: 'col-md-2 control-label' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'location name...' %>
    </div>
    <div class='form-group'>
      <%= f.label :address1, "Address", class: 'col-md-2 control-label' %>
      <%= f.text_field :address1, class: 'form-control', placeholder: 'location address...' %>
    </div>
    <div class='form-group'>
      <span class='col-md-2'></span>
      <%= f.text_field :address2, class: 'form-control', placeholder: 'location address (continued)...' %>
    </div>
    <div class='form-group'>
      <%= f.label :city, class: 'col-md-2 control-label' %>
      <%= f.text_field :city, class: 'form-control', placeholder: 'location city...' %>
    </div>
    <div class='form-group'>
      <%= f.label :state, class: 'col-md-2 control-label' %>
      <%= f.select :state, options_for_select(us_states), {}, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :zip, class: 'col-md-2 control-label' %>
      <%= f.text_field :zip, class: 'form-control' %>
    </div>
    <div class='submit'>
      <%= f.submit 'Save', class: 'button' %>
      <%= link_to 'Cancel', locations_path %>
    </div>
  <% end %>
</div>
