<% provide(:title, 'All locations') %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Address(cont)</th>
    <th>City</th>
    <th>State</th>
    <th>Postal Code</th>
    <th></th>
    <th></th>
  </tr>
  <% @locations.each do |loc| %>
    <tr>
      <td><%= loc.name %></td>
      <td><%= loc.address1 %></td>
      <td><%= loc.address2 %></td>
      <td><%= loc.city %></td>
      <td><%= loc.state %></td>
      <td><%= loc.zip %></td>
      <td><%= link_to 'Edit', edit_location_path(loc) %></td>
      <td><%= link_to 'Delete', loc, method: :delete, data: { confirm: 'Are you sure?' } </td>
    </tr>
  <% end %>
</table>
