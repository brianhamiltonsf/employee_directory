
<div id='signin'>
  <%= form_tag '/login', class: 'form-horizontal' do %>
    <div class='form-group'>
      <%= label_tag 'email' %>
      <%= text_field_tag 'email', nil, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= label_tag 'password' %>
      <%= password_field_tag 'password', nil, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= submit_tag 'Sign in', class: 'button' %>
    </div>
  <% end %>
</div>
